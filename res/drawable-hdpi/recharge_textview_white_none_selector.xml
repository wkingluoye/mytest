<?xml version="1.0" encoding="UTF-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">
    <!--按下状态 --> 
    <item android:state_pressed="true" >
		<shape >
		    <solid android:color="#e5e6e7"
			/>
		    <!--  
			<gradient 
				android:startColor="#ffffffff"
				android:endColor="#b4ff80c0"
				android:type="linear"
				android:angle="270"
			/>-->
			<stroke  
	    		android:width="1dp"
				android:color="#898b8c"
			/>
			<padding
				android:left="6dp"
				
				android:right="6dp"
				
			/>
			<corners 
				android:radius="6dp"
			/>	
		</shape>
	</item>
	<!--获得焦点状态 --> 
	<item android:state_focused="true" >
		<shape>
			<solid android:color="#f2f4f7"
			/>
			<stroke  
	    		android:width="1dp"
				android:color="#898b8c"
			/>
			<padding
				android:left="6dp"
				
				android:right="6dp"
				
			/>
			<corners 
				android:radius="6dp"
			/>	
		</shape>
	</item>
	<!--一般状态 --> 
	<item>
		<shape>
			<solid android:color="#f2f4f7"
			/>
			<stroke  
	    		android:width="1dp"
				android:color="#898b8c"
			/>
			<padding
				android:left="6dp"
				
				android:right="6dp"
				
			/>
			<corners 
				android:radius="6dp"
			/>	
		</shape>
	</item>
</selector>