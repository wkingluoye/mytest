<?xml version="1.0" encoding="utf-8"?>
<AbsoluteLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="280dp"
    android:layout_height="140dp"
    android:background="#ffffff"
    android:orientation="vertical" >
	<TextView
        android:id="@+id/recharge_result_title"
        android:layout_width="fill_parent"
        android:paddingLeft="2dp"
        android:layout_height="24dp"
        android:layout_x="0dp"
        android:layout_y="0dp"
        android:text="正在付款"
        android:textColor="#000" 
        android:gravity="center_vertical"
        />

	<TextView
	    android:id="@+id/recharge_result_cash"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:layout_x="10dp"
	    android:layout_y="27dp"
	    android:text="成功充值50元"
	    android:textColor="#000"
	    android:textSize="16dp" />

    <TextView
        style="@style/rechargeresult_btn"
        android:background="@drawable/recharge_textview_white_none_selector"
        android:id="@+id/recharge_result_btn_go_userinfo"
        android:layout_width="82dp"
        android:layout_height="24dp"
        android:layout_x="34dp"
        android:layout_y="100dp"
        android:text="查看帐户" />

    <TextView
        android:id="@+id/recharge_result_btn_go_hall"
        style="@style/rechargeresult_btn"
        android:layout_width="81dp"
        android:layout_height="24dp"
        android:layout_x="154dp"
        android:layout_y="100dp"
        android:background="@drawable/recharge_textview_white_none_selector"
        android:gravity="center"
        android:text="返回大厅" />

</AbsoluteLayout>
