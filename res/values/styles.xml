<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    <color name="bg_black">#dddddd</color>
    <style name="NotificationText">  
        <item name="android:textColor">?android:attr/textColorPrimary</item>  
    </style>  
  
    <style name="NotificationTitle">  
        <item name="android:textColor">?android:attr/textColorPrimary</item>  
        <item name="android:textStyle">bold</item>  
    </style> 
        <style name="largeCustomProgressBar" parent="@android:style/Widget.ProgressBar">
        <item name="android:indeterminateDrawable">@drawable/custom_loading</item>
    </style>
        <style name="ChoicePreferenceButton">
        <item name="android:textColor">@color/mm_choice_text_color</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:button">@null</item>
        <item name="android:minWidth">60.0dip</item>
    </style>
    <style name="chatroom_chatblock_edittext">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">320dp</item>
        <item name="android:background">#00000000</item>
        <item name="android:editable">false</item>
        <item name="android:enabled">true</item>
        <item name="android:focusable">false</item>
        <item name="android:minHeight">60dp</item>
        <item name="android:padding">5dp</item>
        <item name="android:scrollbarStyle">outsideInset</item>
        <item name="android:scrollbars">vertical</item>
        <item name="android:textColor">#474747</item>
        <item name="android:gravity">top</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="rechargeresult_btn">
        <item name="android:textColor">#000000</item>
        <item name="android:width">100dp</item>
        <item name="android:gravity">center</item>
        
    </style>
</resources>